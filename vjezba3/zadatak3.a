VJ1         EQU 0FFFF1000

VJ2         EQU 0FFFF2000
VJ2_BS      EQU 0FFFF2004

VJ3         EQU 0FFFF3000
VJ3_STAT    EQU 0FFFF3004
VJ3_IEND    EQU 0FFFF3008
VJ3_STOP    EQU 0FFFF300C

    JP MAIN

    ORG 8
    DW 1000

MAIN
    ORG 10
    MOVE 10000, SP
    MOVE %B 00010000, SR

    MOVE 1, R1
    STORE R1, (VJ3_STOP)

    MOVE 0, R2
    MOVE 0, R6

TERMINATE_HANDLE
    CMP R2, 0
    JR_EQ VJ2_HANDLE

    MOVE %B 00000000, SR

    MOVE 0, R1
    STORE R1, (VJ3_STOP)

    HALT

VJ2_HANDLE
    LOAD R1, (VJ2_BS)
    CMP R1, 0
    JR_EQ TERMINATE_HANDLE

    LOAD R1, (BROJ)
    STORE R1, (VJ2)
    STORE R1, (VJ2_BS)
    ADD R6, 1, R6

    JR TERMINATE_HANDLE

BROJ        DW 0

INT
    ORG 1000
    MOVE SR, R5

    STORE R0, (VJ3_STAT)
    LOAD R0, (VJ1)
    SHR R0, 1F, R4
    JR_NZ SHOULD_TERMINATE

    PUSH R0
    CALL OBRADI
    ADD SP, 4, SP
    STORE R0, (BROJ)

    STORE R6, (VJ3)
    STORE R0, (VJ3_IEND)

    JR INT_RET

SHOULD_TERMINATE
    MOVE 1, R2

INT_RET
    MOVE R5, SR
    RETI

OBRADI
    LOAD R3, (SP + 4)
    MOVE 1, R0
    SHL R0, R3, R0
    RET
